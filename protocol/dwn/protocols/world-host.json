{
  "protocol": "https://wired-protocol.org/v0/protocols/world-host.json",
  "published": true,
  "types": {
    "world": {
      "schema": "https://wired-protocol.org/v0/schemas/world.json",
      "dataFormat": [
        "application/json"
      ]
    },
    "server-info": {
      "schema": "https://wired-protocol.org/v0/schemas/server-info.json",
      "dataFormat": [
        "application/json"
      ]
    }
  },
  "structure": {
    "world": {
      "$actions": [
        {
          "who": "anyone",
          "can": [
            "create",
            "read"
          ]
        },
        {
          "who": "author",
          "can": [
            "update"
          ]
        }
      ],
      "server-info": {
        "$actions": [
          {
            "who": "anyone",
            "can": [
              "read"
            ]
          },
          {
            "who": "recipient",
            "can": [
              "create",
              "update"
            ]
          }
        ]
      }
    }
  }
}
