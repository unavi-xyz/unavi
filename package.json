{
  "name": "wired",
  "version": "0.0.0",
  "private": true,
  "license": "GPL-3.0-or-later",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "codegen": "yarn workspace @wired-labs/client codegen && yarn workspace @wired-labs/lens codegen",
    "deploy": "turbo deploy",
    "dev": "turbo dev --parallel",
    "format": "prettier --write .",
    "postinstall": "patch-package && yarn codegen",
    "lint": "turbo lint",
    "publish-packages": "turbo lint build && changeset version"
  },
  "devDependencies": {
    "@changesets/cli": "^2.25.0",
    "patch-package": "^6.4.7",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.7.1",
    "prettier-plugin-packagejson": "^2.3.0",
    "prettier-plugin-prisma": "^4.4.0",
    "turbo": "^1.5.5",
    "typescript": "~4.8.4"
  },
  "packageManager": "yarn@1.22.19",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  }
}
