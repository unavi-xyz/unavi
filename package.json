{
  "name": "wired",
  "version": "0.0.0",
  "private": true,
  "license": "GPL-3.0-or-later",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "codegen": "turbo run codegen",
    "deploy": "turbo run deploy",
    "dev": "turbo run dev --parallel",
    "format": "eslint --fix . --ext .js,.cjs,.mjs,.jsx,.ts,.tsx,.json --ignore-path .prettierignore && prettier --write .",
    "postinstall": "husky install && patch-package",
    "lint": "turbo run lint",
    "test": "turbo run test"
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown",
    "*.{js,cjs,mjs,jsx,ts,tsx,json}": "eslint --fix"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "patch-package": "^6.4.7",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.7.1",
    "prettier-plugin-prisma": "^4.1.0",
    "turbo": "latest",
    "typescript": "^4.8.3"
  },
  "packageManager": "yarn@1.22.19",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  }
}
